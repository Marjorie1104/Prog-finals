

public class Quiz {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int score = 0;

        // Step 1: Student Information
        System.out.println("=== STUDENT INFORMATION ===");
        System.out.print("Enter your full name: ");
        String name = scanner.nextLine();
        System.out.print("Enter your grade level: ");
        String gradeLevel = scanner.nextLine();
        System.out.print("Enter your section: ");
        String section = scanner.nextLine();

        // Step 2: Subject Selection
        System.out.println("\n=== SUBJECT SELECTION ===");
        System.out.println("1. Science");
        System.out.println("2. Math");
        System.out.println("3. History");
        System.out.print("Choose a subject (1-3): ");
        int subjectChoice = scanner.nextInt();
        scanner.nextLine(); // consume newline

        System.out.println("\n=== QUIZ STARTS NOW ===");

        // Step 3: Questions per subject
        if (subjectChoice == 1) {
            // SCIENCE QUIZ
            System.out.println("Question 1: What planet is known as the Red Planet?");
            System.out.println("A. Earth");
            System.out.println("B. Mars");
            System.out.println("C. Venus");
            System.out.println("D. Jupiter");
            System.out.print("Your answer: ");
            String ans1 = scanner.nextLine();
            if (ans1.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 2: What gas do plants absorb from the atmosphere?");
            System.out.println("A. Oxygen");
            System.out.println("B. Nitrogen");
            System.out.println("C. Carbon Dioxide");
            System.out.println("D. Hydrogen");
            System.out.print("Your answer: ");
            String ans2 = scanner.nextLine();
            if (ans2.equalsIgnoreCase("C")) score++;

            System.out.println("\nQuestion 3: What is the boiling point of water?");
            System.out.println("A. 50°C");
            System.out.println("B. 75°C");
            System.out.println("C. 90°C");
            System.out.println("D. 100°C");
            System.out.print("Your answer: ");
            String ans3 = scanner.nextLine();
            if (ans3.equalsIgnoreCase("D")) score++;

        } else if (subjectChoice == 2) {
            // MATH QUIZ
            System.out.println("Question 1: What is 5 + 3?");
            System.out.println("A. 7");
            System.out.println("B. 8");
            System.out.println("C. 9");
            System.out.println("D. 10");
            System.out.print("Your answer: ");
            String ans1 = scanner.nextLine();
            if (ans1.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 2: What is 9 x 9?");
            System.out.println("A. 81");
            System.out.println("B. 72");
            System.out.println("C. 99");
            System.out.println("D. 79");
            System.out.print("Your answer: ");
            String ans2 = scanner.nextLine();
            if (ans2.equalsIgnoreCase("A")) score++;

            System.out.println("\nQuestion 3: What is the square root of 16?");
            System.out.println("A. 2");
            System.out.println("B. 3");
            System.out.println("C. 4");
            System.out.println("D. 5");
            System.out.print("Your answer: ");
            String ans3 = scanner.nextLine();
            if (ans3.equalsIgnoreCase("C")) score++;

        } else if (subjectChoice == 3) {
            // HISTORY QUIZ
            System.out.println("Question 1: Who discovered America?");
            System.out.println("A. Ferdinand Magellan");
            System.out.println("B. Christopher Columbus");
            System.out.println("C. Marco Polo");
            System.out.println("D. Vasco da Gama");
            System.out.print("Your answer: ");
            String ans1 = scanner.nextLine();
            if (ans1.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 2: When did World War II end?");
            System.out.println("A. 1940");
            System.out.println("B. 1942");
            System.out.println("C. 1945");
            System.out.println("D. 1948");
            System.out.print("Your answer: ");
            String ans2 = scanner.nextLine();
            if (ans2.equalsIgnoreCase("C")) score++;

            System.out.println("\nQuestion 3: Who was the first President of the Philippines?");
            System.out.println("A. Emilio Aguinaldo");
            System.out.println("B. Manuel L. Quezon");
            System.out.println("C. Jose Rizal");
            System.out.println("D. Andres Bonifacio");
            System.out.print("Your answer: ");
            String ans3 = scanner.nextLine();
            if (ans3.equalsIgnoreCase("A")) score++;

        } else {
            System.out.println("Invalid choice. Please restart the program.");
            scanner.close();
            return;
        }

        // Step 4: Display Results
        System.out.println("\n=== QUIZ COMPLETED ===");
        System.out.println("Name: " + name);
        System.out.println("Grade Level: " + gradeLevel);
        System.out.println("Section: " + section);
        System.out.println("Your final score is: " + score + " out of 3");

        // Step 5: Display Passed or Failed
        if (score >= 2) {
            System.out.println("Result: PASSED ✅");
        } else {
            System.out.println("Result: FAILED ❌");
        }

        System.out.println("\nThank you for taking the quiz!");
        scanner.close();
    }
}
