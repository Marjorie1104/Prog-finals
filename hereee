import java.util.Scanner;

public class Quiz {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int score = 0;
        final int totalQuestions = 3;

        // Step 1: Student Information
        System.out.println("=== STUDENT INFORMATION ===");
        System.out.print("Enter your full name: ");
        String name = scanner.nextLine();
        System.out.print("Enter your grade level: ");
        String gradeLevel = scanner.nextLine();
        System.out.print("Enter your section: ");
        String section = scanner.nextLine();

        // Step 2: Subject Selection
        System.out.println("\n=== SUBJECT SELECTION ===");
        System.out.println("1. CS212 - Discrete Structures");
        System.out.println("2. CS213 - Object Oriented Programming");
        System.out.println("3. CC214 - Data Structures and Algorithms");
        System.out.print("Choose a subject (1-3): ");
        int subjectChoice = scanner.nextInt();
        scanner.nextLine(); // consume newline

        String subjectName = "";

        System.out.println("\n=== QUIZ STARTS NOW ===");

        // Step 3: Questions per subject
        if (subjectChoice == 1) {
            subjectName = "CS212 - Discrete Structures";

            System.out.println("Question 1: What is the result of (¬P ∨ Q) if P is true and Q is false?");
            System.out.println("A. True");
            System.out.println("B. False");
            System.out.println("C. Undefined");
            System.out.println("D. None of the above");
            System.out.print("Your answer: ");
            String ans1 = scanner.nextLine();
            if (ans1.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 2: Which of the following is a subset of {1, 2, 3}?");
            System.out.println("A. {4}");
            System.out.println("B. {1, 2, 3, 4}");
            System.out.println("C. {2, 3}");
            System.out.println("D. {5}");
            System.out.print("Your answer: ");
            String ans2 = scanner.nextLine();
            if (ans2.equalsIgnoreCase("C")) score++;

            System.out.println("\nQuestion 3: Convert the binary number 1011 to decimal.");
            System.out.println("A. 9");
            System.out.println("B. 10");
            System.out.println("C. 11");
            System.out.println("D. 12");
            System.out.print("Your answer: ");
            String ans3 = scanner.nextLine();
            if (ans3.equalsIgnoreCase("C")) score++;

        } else if (subjectChoice == 2) {
            subjectName = "CS213 - Object Oriented Programming";

            System.out.println("Question 1: Which OOP concept allows a subclass to use methods from its superclass?");
            System.out.println("A. Polymorphism");
            System.out.println("B. Inheritance");
            System.out.println("C. Abstraction");
            System.out.println("D. Encapsulation");
            System.out.print("Your answer: ");
            String ans1 = scanner.nextLine();
            if (ans1.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 2: What is method overloading?");
            System.out.println("A. Using the same method name with different parameters");
            System.out.println("B. Using different method names with same parameters");
            System.out.println("C. Overriding methods from parent class");
            System.out.println("D. None of the above");
            System.out.print("Your answer: ");
            String ans2 = scanner.nextLine();
            if (ans2.equalsIgnoreCase("A")) score++;

            System.out.println("\nQuestion 3: Which of the following demonstrates polymorphism?");
            System.out.println("A. Same method behaving differently based on the object");
            System.out.println("B. Hiding data inside a class");
            System.out.println("C. Inheriting attributes from another class");
            System.out.println("D. Declaring variables");
            System.out.print("Your answer: ");
            String ans3 = scanner.nextLine();
            if (ans3.equalsIgnoreCase("A")) score++;

        } else if (subjectChoice == 3) {
            subjectName = "CC214 - Data Structures and Algorithms";

            System.out.println("Question 1: Which data structure uses the LIFO principle?");
            System.out.println("A. Queue");
            System.out.println("B. Stack");
            System.out.println("C. Array");
            System.out.println("D. Linked List");
            System.out.print("Your answer: ");
            String ans1 = scanner.nextLine();
            if (ans1.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 2: What is the time complexity of binary search?");
            System.out.println("A. O(n)");
            System.out.println("B. O(log n)");
            System.out.println("C. O(n^2)");
            System.out.println("D. O(1)");
            System.out.print("Your answer: ");
            String ans2 = scanner.nextLine();
            if (ans2.equalsIgnoreCase("B")) score++;

            System.out.println("\nQuestion 3: Which data structure is best for implementing recursion?");
            System.out.println("A. Stack");
            System.out.println("B. Queue");
            System.out.println("C. Graph");
            System.out.println("D. Tree");
            System.out.print("Your answer: ");
            String ans3 = scanner.nextLine();
            if (ans3.equalsIgnoreCase("A")) score++;

        } else {
            System.out.println("Invalid choice. Please restart the program.");
            scanner.close();
            return;
        }

        // Step 4: Compute and Display Results
        double percentage = ((double) score / totalQuestions) * 100;

        System.out.println("\n=== QUIZ COMPLETED ===");
        System.out.println("Name: " + name);
        System.out.println("Grade Level: " + gradeLevel);
        System.out.println("Section: " + section);
        System.out.println("Subject: " + subjectName);
        System.out.println("Your final score is: " + score + " out of " + totalQuestions);
        System.out.printf("Percentage: %.2f%%\n", percentage);

        // Step 5: Pass/Fail Remark
        if (percentage >= 60) {
            System.out.println("Result: PASSED ✅");
        } else {
            System.out.println("Result: FAILED ❌");
        }

        System.out.println("\nThank you for taking the quiz!");
        scanner.close();
    }
}
